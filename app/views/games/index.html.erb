<h1 class='page-header'>History</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Opponent</th>
      <th>Score</th>
      <th>Result</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |g| %>
      <tr>
        <td><%= g.date %></td>
        <td><%= g.opponent.email %></td>
        <td><%= g.user_score %></td>
        <td><%= g.opponent_score %></td>
      </tr>
    <% end %>
  </tbody>
</table>